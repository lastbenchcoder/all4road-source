@model List<DDWBlogger.Project.Source.Models.ArticleAndFeatures>

<div id="top-sidebar">
    <section class="feature-widget">
        <h6 class="feature-title">Featured News</h6>
        <div class="carousel-wrapper">
            <div class="list-carousel responsive">
                <ul class="feature-news clearfix">
                    @if (Model != null)
                    {
                        if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                if (item.ArticleAndTypes.Type == DDWBlogger.Project.Source.Enums.eArticleTypes.Featured.ToString())
                                {
                                    <li>
                                        <article class="feature-item clearfix">
                                            <div class="article-thumb">
                                                <a href="/home/articledetail?id=@item.Article.ArticleId" class="hover-effect link-icon">
                                                    <img class="responsive-img" src="../../@item.Article.FeaturedBanner" alt="" height="152" width="155"/>
                                                </a>
                                            </div><!--article-thumb-->
                                            <div class="entry-content">
                                                <span class="entry-meta">in:&nbsp;</span><a class="meta-data" href="/home/articlesbysubcategory?id=@item.Article.SubCategoryId">@item.Article.SubCategory.Title</a>
                                                <span class="entry-meta">&nbsp;&nbsp;|&nbsp;&nbsp;</span><span class="meta-data">@item.Article.DateCreated.ToString("D")</span>
                                                <h4 class="entry-title"><a href="/home/articledetail?id=@item.Article.ArticleId">@item.Article.Title</a></h4>
                                                @if (item.Article.Description.Length > 100)
                                                {
                                                    <p>@Html.Raw(item.Article.Description.Substring(0, 100))</p>
                                                }
                                                else
                                                {
                                                    <p>@Html.Raw(item.Article.Description)</p>
                                                }
                                            </div><!--end:entry_content-->
                                        </article>
                                    </li>
                                }
                            }
                        }
                    }
                </ul>
                <div class="clear"></div>
                <div class="feature-nav">
                    <a id="prev-1" class="prev" href="#">Previous</a>
                    <a id="next-1" class="next" href="#">Next</a>
                </div>
            </div>
        </div>
    </section>
</div>
